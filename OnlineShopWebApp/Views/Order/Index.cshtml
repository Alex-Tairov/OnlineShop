@model UserDeliveryInfoViewModel

<form method="post">
    <div class="row text-center">
        <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

        <div class="col">
            <div>
                <label asp-for="Name">Введите ФИО</label><br />
                <input placeholder="Введите имя" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <br />
            <div>
                <label asp-for="Address">Адресс</label><br />
                <input  placeholder="Введите адрес доставки" asp-for="Address" />
                <span asp-validation-for="Address"></span>
            </div>
            <br />
            <div>
                <label asp-for="Phone">Телефон</label><br />
                <input  placeholder="Введите телефон" asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>
            <br />
            <button class="btn btn-success" type="submit" asp-controller="Order" asp-action="Buy">Оформить заказ</button>
        </div>
    </div>
</form>