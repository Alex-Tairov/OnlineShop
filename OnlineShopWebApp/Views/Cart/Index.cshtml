@model CartViewModel

@if (Model == null || Model.Items.Count==0)
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена руб</th>
                        <th>Количество</th>
                        <th>Стоимость руб</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Cost</td>
                        <td>@item.Amount</td>
                        <td>@item.Cost</td>
                        <td><a class="btn btn-primary"  asp-area="" asp-controller="Cart" asp-action="Decrease" asp-route-productId="@item.Product.Id" role="button">-</a></td>
                        <td><a class="btn btn-primary" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@item.Product.Id" role="button">+</a></td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <h3>Итого:</h3>
                <h3>@Model.Cost</h3>
                <h3>@Model.TotalCount</h3>

            </div>
            <div class="text-center">
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index" role="button">Продолжить покупки</a>
                <a class="btn btn-success" asp-area="" asp-controller="Cart" asp-action="Clear" role="button">Отчистить корзину</a>
                <a class="btn btn-success" asp-area="" asp-controller="Order" asp-action="Index"role="button">Оформить заказ</a>
            </div>
        </div>
    </div>
}