@model Register
<form method="post">
    <div class="col-md-7 offset-md-4">
        <h1 class="text-danger">Регистрация</h1>
        <hr>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <div>
            <label asp-for="UserName">Логин</label><br />
            <input type="email" placeholder="Введите логин" asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>

        <div>
            <label asp-for="Phone">Телефон</label><br />
            <input placeholder="Введите номер" asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>

        <div>
            <label asp-for="Password">Пароль</label><br />
            <input type="password" placeholder="Введите пароль" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword">Повторить пароль</label><br />
            <input type="password" placeholder="Повторите пароль" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <br />

        <div>
            <button type="submit" asp-controller="account" asp-action="register">Регистрация</button>
            <a class="btn btn-outline-primary" asp-area="" asp-controller="account" asp-action="login" role="button">Вернуться</a>
        </div>
    </div>
</form>
