@model List<ProductViewModel>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-9">
        <h3 class="text-danger">  Список продуктов  </h3>
        <div class="row justify-content-end">
            <a class="btn btn-primary"
               asp-area="Admin"
               asp-controller="Product"
               asp-action="Add"
               role="button">Добавить товар</a>
        </div>
        <br />

        @if (Model == null || Model.Count() == 0)
        {
            <h4> Товаров в магазине нет </h4>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <table class="table table-primary">
                        <thead>
                            <tr>
                                <td>  Название  </td>
                                <td>  Цена  </td>
                                <td>  Картинка  </td>
                                <td>  Описание  </td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td> @item.Name</td>
                                <td> @item.Cost</td>
                                <td> <img class="card-img-top" src=@item.ImagePath alt="Изображение товара" /></td>
                                <td> @item.Description</td>
                                <td>
                                    <a type="button" class="btn btn-outline-primary"
                                       asp-area="Admin"
                                       asp-controller="Product"
                                       asp-action="Edit"
                                       asp-route-productId="@item.Id">Редактировать</a>
                                    <a type="button" class="btn btn-outline-primary"
                                       asp-area="Admin"
                                       asp-controller="Product"
                                       asp-action="Remove"
                                       asp-route-productId="@item.Id">Удалить</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>